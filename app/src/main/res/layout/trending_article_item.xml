<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Image -->
        <ImageView
            android:id="@+id/trendingImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_trending" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Category -->
            <TextView
                android:id="@+id/trendingCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/category_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginBottom="6dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/trendingTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Breaking News: Major Technology Breakthrough Announced"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Footer with date and likes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/trendingDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2h ago"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/poppins_regular" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_heart_filled"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/red" />

                <TextView
                    android:id="@+id/trendingLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2K"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 